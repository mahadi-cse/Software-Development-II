<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    android:focusable="true">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/coach_image"
           android:layout_width="340dp"
           android:layout_height="271dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="20dp"
           android:contentDescription="@string/todo"
           android:src="@drawable/ac_s" />

       <TextView
           android:id="@+id/class_initialize"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/coach_image"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:text="Class : "
           android:textColor="@color/black"
           android:textSize="20sp" />

       <TextView
           android:id="@+id/class_tittle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/coach_image"
           android:layout_marginTop="5dp"
           android:layout_toEndOf="@id/class_initialize"
           android:text="AC_B"
           android:textColor="@color/black"
           android:textSize="20sp"
           android:textStyle="bold" />
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeseatcapacity"
                android:layout_below="@id/class_initialize">

                <TextView
                    android:id="@+id/traintype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train Type "
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/broadgaugeinitiazle"
                    android:layout_below="@+id/traintype"
                    android:layout_marginTop="10dp"
                    android:text="Broadgauge"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/metergaugeinitiazle"
                    android:layout_below="@+id/broadgaugeinitiazle"
                    android:layout_marginTop="10dp"
                    android:text="Metergauge"
                    android:textColor="@color/black"
                    />

                </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="100dp"
           android:layout_below="@id/class_tittle">

           <TextView
               android:id="@+id/seatcapacity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginLeft="40dp"
               android:text="Seatcapacity (Person)"
               android:textColor="@color/black" />

           <TextView
               android:layout_marginStart="65dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/broadgaugecapasity"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/seatcapacity"
               android:layout_marginTop="10dp"
               android:text="8"
               android:textColor="@color/black"
               />

           <TextView
               android:layout_marginStart="65dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/metercapasity"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/broadgaugecapasity"
               android:layout_marginTop="10dp"
               android:text="8"
               android:textColor="@color/black"
               />

       </RelativeLayout>


   </RelativeLayout>
</androidx.cardview.widget.CardView>