<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity2">

    <!-- TODO: Update blank fragment layout -->
    <ImageView

        android:id="@+id/user_info_section"
        android:layout_width="228dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_register" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:textSize="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/name_show"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/user_info_section"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:paddingVertical="15dp"
        android:text="" />

    <TextView
        android:id="@+id/email_show"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/name_show"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="15dp"
        android:drawableLeft="@drawable/ic_email_show"
        android:drawablePadding="10dp"
        android:text="" />

    <TextView
        android:id="@+id/nid_show"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_show"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_nid"
        android:drawablePadding="10dp"
        android:paddingVertical="15dp"
        android:text="" />

    <TextView
            android:id="@+id/phone_show"
            android:layout_marginTop="20dp"
            android:paddingVertical="17dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text=""
            android:layout_below="@id/nid_show"
            android:drawableLeft="@drawable/ic_phone_show"
            android:drawablePadding="10dp"
        android:layout_marginLeft="65dp"
            />
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_show"
            android:layout_centerHorizontal="true"
            android:text="Edit Information"
            />

</RelativeLayout>